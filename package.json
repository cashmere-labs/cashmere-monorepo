{
    "name": "cashmere-monorepo",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "clean": "nx run-many --target=clean",
        "package": "nx run-many --target=package --all --parallel=4",
        "dev": "pnpm package && sst dev",
        "build": "pnpm package && nx run-many --target=build --all --parallel=4 && sst build",
        "deploy": "pnpm package && pnpm build && sst deploy",
        "remove": "sst remove",
        "console": "sst console",
        "test": "pnpm run lint:check && pnpm run format:check && nx run-many --target=test --all --parallel=4",
        "lint": "eslint --ext=js,ts --fix",
        "lint:check": "eslint --ext=js,ts",
        "format": "prettier --write --ignore-path .gitignore .",
        "format:check": "prettier --check --ignore-path .gitignore .",
        "typecheck": "tsc --noEmit"
    },
    "devDependencies": {
        "@tsconfig/node18": "^2.0.0",
        "@typescript-eslint/eslint-plugin": "^5.59.5",
        "@typescript-eslint/parser": "^5.59.5",
        "aws-cdk-lib": "2.72.1",
        "constructs": "10.1.156",
        "eslint": "^8.40.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "lint-staged": "^13.2.2",
        "nx": "16.1.1",
        "prettier": "^2.8.8",
        "prettier-plugin-organize-imports": "^3.2.2",
        "sst": "^2.8.10",
        "typescript": "^5.0.4"
    },
    "lint-staged": {
        "*.{js,ts,json,md}": [
            "prettier --write"
        ]
    },
    "engines": {
        "node": "^18.16.0"
    },
    "packageManager": "pnpm@8.3.0",
    "workspaces": [
        "shared/*",
        "backend/*"
    ]
}
